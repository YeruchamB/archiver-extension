{
  "manifest_version": 3,
  "name": "Wayback Machine URL Archiver",
  "version": "1.0",
  "description": "Quickly archive URLs using the Internet Archive's Wayback Machine",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://archive.org/*",
    "https://web.archive.org/*"
  ],
  "action": {
    "default_popup": "wayback-archiver.html",
    "default_title": "Archive URL"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 